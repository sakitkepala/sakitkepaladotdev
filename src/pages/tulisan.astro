<style>
  .content-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, var(--content-container-width)) minmax(0, 1fr);
    margin-top: 20rem;
    margin-bottom: 10rem;
  }

  .content-layout > *:nth-child(1) {
    grid-column: 2;
    grid-row: 1;
    max-width: 600px;
  }

  .content > p + p {
    margin-top: 0.675em;
  }

  .content > h1 {
    font-weight: 400;
    font-size: 2.75rem;
    margin-bottom: 2.75rem;
  }

  .post-list .post + .post {
    margin-top: 2rem;
  }

  .post .title {
    font-weight: 400;
    font-size: 1.75rem;
    margin-bottom: 0.25em;
  }

  .post .excerpt {
    font-size: 1.125rem;
  }
</style>
